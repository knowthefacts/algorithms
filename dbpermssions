# Configure Lake Formation to use Lake Formation permissions by default
aws lakeformation put-data-lake-settings \
    --data-lake-settings '{
        "DataLakeAdmins": [
            {
                "DataLakePrincipalIdentifier": "arn:aws:iam::YOUR-ACCOUNT-ID:user/YOUR-USERNAME"
            }
        ],
        "CreateDatabaseDefaultPermissions": [],
        "CreateTableDefaultPermissions": []
    }'

# Export to JSON
aws lakeformation list-permissions --max-results 1000 > lakeformation-permissions.json

# Extract specific fields
aws lakeformation list-permissions \
    --query 'PrincipalResourcePermissions[*].[Principal.DataLakePrincipalIdentifier,Resource,Permissions]' \
    --output table > permissions-summary.txt
